{
  "name": "@melmoth-the-wanderer/discord-bot-base",
  "version": "0.0.1",
  "description": "Set of common functions to be used in any Discord bot.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"lib/**/*.ts\" \"lib/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --config jestconfig.json",
    "prepublishOnly": "npm i && npm run build && npm test && npm run lint",
    "preversion": "npm i && npm run build && npm test && npm run lint",
    "version": "generate-changelog && git add CHANGELOG.md"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Melmoth-the-Wanderer/discord-bot-base.git"
  },
  "bugs": {
    "url": "https://github.com/Melmoth-the-Wanderer/discord-bot-base.git/issues"
  },
  "homepage": "https://github.com/Melmoth-the-Wanderer/discord-bot-base.git/README.md",
  "author": "pevik@proton.me",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.1.1",
    "generate-changelog": "^1.8.0",
    "jest": "^29.1.2",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.8.4"
  }
}
